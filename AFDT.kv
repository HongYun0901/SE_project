<UI>:
	#background color
	canvas.before: 
        Color: 
			rgb: 0, 0, 0
        Rectangle: 
            pos: self.pos 
            size: self.size 				
	
	#UI reference
	sysMessageLabel:sysMessageLabel
	userHintMessageLabel:userHintMessageLabel
	displayCode:displayCode
	orientation: 'vertical'
	imageButton:imageButton
	
	# show user hint
	UserHintMessage:
		id:userHintMessageLabel
		halign: 'center'
		valign: 'middle'
		size_hint_y:0.1
		text_size: root.width, None
		font_size:app.uiFontSize
	# component	
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.9
		spacing: 2		
		ButtonList:			
		DisplayCode:
			size_hint_x: 0.4
			id:displayCode
		BoxLayout:
			size_hint_x: 0.4
			ImageButton:
				id:imageButton
				
	SysMessage:
		size_hint_y: 0.1
		id:sysMessageLabel

<ImageButton>:
	size:root.size
	source: 'exampleflow.png'
	on_release: root.viewImage()

<DisplayImage>:
	Image:
		source: 'exampleflow.png'
		allow_stretch: True
		keep_ratio: True
	
<userHelpDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "OK"
                on_release: root.ok()


	
<ButtonList>:
	orientation: 'vertical'
	size_hint_x: 0.2		
	Button:
		id:importfile_btn
		halign: 'center'
		text_size: root.width, None
		font_size:app.uiFontSize
		text: 'Import file'
		on_release:root.importFile()
	Button:
		id:drawdiagram_btn
		halign: 'center'
		text_size: root.width, None
		font_size:app.uiFontSize
		text: 'Draw Diagram'	
	Button:
		id:clear_btn
		halign: 'center'
		text_size: root.width, None
		font_size:app.uiFontSize
		text: 'Clear'	
		on_release:root.clear()
	Button:
		id:saveimage_btn
		halign: 'center'
		text_size: root.width, None
		font_size:app.uiFontSize
		text: 'Save Image'
		on_release:root.saveFile()
	Button:
		id:userpreference_btn
		halign: 'center'
		text_size: root.width, None
        font_size:app.uiFontSize
		text: 'User Prefernce'
        on_release:root.setting()
	Button:
		id:userhelp_btn
		halign: 'center'
		text_size: root.width, None
        font_size:app.uiFontSize
		text: 'user help'
        on_release:root.userhelp()
		
		

<floatImage>
	BoxLayout:
		pos: root.pos
		DisplayImage:
	
<DisplayCode>
	text: ''
	font_size: app.codeFontSize
	Label:
        id:displayCodeLabel
		font_name:'./kaiu'
        font_size:root.font_size
		text: root.text
		text_size: root.width, None

		size_hint_y: None
		height: self.texture_size[1]

<UserHintMessage>:		
	text: 'User hint'
	canvas.before: 
        Color: 
			rgb: .5, .5, .4
        Rectangle: 
            pos: self.pos 
            size: self.size		

<SysMessage>:
	font_size:app.uiFontSize
	text: 'Welcome to AFDT'
	canvas.before: 
        Color: 
			rgb: .5, .5, .4
        Rectangle: 
            pos: self.pos 
            size: self.size 				
	
 


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<settingDialog>:
	#textExample:textExample
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
		padding:30
		#BoxLayout:
		#	Label:
		#		width: root.width*0.5
		#		text: "PreView"
		#		font_size: app.codeFontSize
		#		id:textExample			
        BoxLayout:
			size_hint_y: 0.5
			orientation: 'horizontal'
			Label:
				
				size_hint_x:0.2
				text:"UI font size"
			Slider:
				
				id: uifontSizeValue
				min: 1
				max: 100
				value: app.uiFontSize
				step: 1
				orientation: 'horizontal'
				on_touch_move:
					app.uiFontSize = uifontSizeValue.value
		BoxLayout:
			size_hint_y: 0.5
			orientation: 'horizontal'
			Label:
				size_hint_x:0.2
				
				text:"Code font size"
			Slider:
				
				id: codefontSizeValue
				min: 1
				max: 100
				value: app.codeFontSize
				step: 1
				orientation: 'horizontal'
				on_touch_move:
					app.codeFontSize = codefontSizeValue.value	
