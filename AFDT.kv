<UI>:
	#background color
	canvas.before: 
        Color: 
			rgb: 0, 0, 0
        Rectangle: 
            pos: self.pos 
            size: self.size 				
	
	#UI reference
	sysMessageLabel:sysMessageLabel
	displayCode:displayCode
	orientation: 'vertical'
	imageButton:imageButton
	# component
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.9
		spacing: 2		
		ButtonList:			
		DisplayCode:
			id:displayCode
		BoxLayout:
			size_hint_x: 0.4
			ImageButton:
				id:imageButton
	SysMessage:
		id:sysMessageLabel

<ImageButton>:
	source: 'exampleflow.png'
	on_release: root.viewImage()

<DisplayImage>:
	Image:
		source: 'exampleflow.png'
		allow_stretch: True
		keep_ratio: True
	
<userHelpDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "OK"
                on_release: root.ok()



	
<ButtonList>:
	orientation: 'vertical'
	size_hint_x: 0.2		
	Button:
		text: 'Import file'
		on_release:root.importFile()
	Button:
		text: 'Draw Diagram'	
	Button:
		text: 'Clear'	
		on_release:root.clear()
	Button:
		text: 'Save Image'
		on_release:root.saveFile()
	Button:
        text: 'User Prenfernce'
        on_release:root.setting()
	Button:
        text: 'user help'
        on_release:root.userhelp()
		
		

<floatImage>
	BoxLayout:
		pos: root.pos
		DisplayImage:
	
<DisplayCode>
	text: ''
	size_hint_x: 0.4	
	font_size:20
	Label:
        id:displayCodeLabel
        font_size:root.font_size
		text: root.text
		text_size: root.width, None

		size_hint_y: None
		height: self.texture_size[1]
		

<SysMessage>:		
    size_hint_y: 0.2
	text: 'Welcome to AFDT'
	canvas.before: 
        Color: 
			rgb: .5, .5, .4
        Rectangle: 
            pos: self.pos 
            size: self.size 				
	
 


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<settingDialog>:
	textExample:textExample
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
		Label:
			size_hint_y: 0.5
			text: "PreView"
			font_size: fontSizeValue.value
			id:textExample
        Slider:
			size_hint_y: 0.2
			id: fontSizeValue
			min: 1
			max: 100
			value: 20.0
			step: 1
			orientation: 'horizontal'
			on_touch_move: textExample.font_size = fontSizeValue.value
		Label:
			size_hint_y: 0.2
		    text: str(fontSizeValue.value)
		BoxLayout:
            size_hint_y: None
            height: 30
			Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "OK"
                on_release: root.ok(str(fontSizeValue.value))
			